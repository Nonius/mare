ffi LibC:
  fun puts (CString) I32:

ffi LibPonyRT:
  fun pony_exitcode (I32) None:

primitive Greeting:
  const hello: "Hello, World!"

primitive Zero:
  fun "+" (other I32) I32:
    other

class Sentence:
  prop text: Greeting.hello

actor Main:
  new:
    exitcode I32 = Zero + 42
    none = ()
    
    @say_stuff
    
    if True \
      LibPonyRT.pony_exitcode(exitcode)
  
  fun say_stuff:
    sentence = Sentence.new
    LibC.puts(sentence.text)
